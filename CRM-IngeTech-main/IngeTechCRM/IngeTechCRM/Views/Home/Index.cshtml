                        <div class="flex items-center justify-between border-t border-gray-100 p-4">
                            <span class="text-lg font-bold text-brand-blue">@producto.PRECIO.ToString("C2")</span>
                            <div class="flex space-x-2">
                                <a href="@Url.Action("DetalleProducto", new { id = producto.ID_PRODUCTO })" class="rounded-full bg-gray-100 p-2 text-gray-dark transition hover:bg-gray-200" title="Ver detalles">
                                    <i class="fas fa-eye"></i>
                                </a>
                                <a href="@Url.Action("AgregarAlCarrito", new { idProducto = producto.ID_PRODUCTO })" class="rounded-full bg-brand-blue p-2 text-white transition hover:bg-brand-blue/90" title="Agregar al carrito">
                                    <i class="fas fa-shopping-cart"></i>
                                </a>
                            </div>
                        </div>
                    </div>
                }
            </div>
            <div class="mt-12 text-center">
