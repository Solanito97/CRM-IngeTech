@section Scripts {
    <script>
        // Usar un formato seguro de jQuery dentro de una IIFE
        (function($) {
            $(function() {
                // Para manejar efectos adicionales si se necesitan
                console.log("Página de inicio cargada correctamente");

                // Añadir clase de animación a elementos en scroll
                $(window).scroll(function() {
                    var windowBottom = $(this).scrollTop() + $(this).innerHeight();

                    $(".animate-on-scroll").each(function() {
                        var objectBottom = $(this).offset().top + $(this).outerHeight() * 0.3;

                        if (objectBottom < windowBottom) {
                            if (!$(this).hasClass("animated")) {
                                $(this).addClass("animated");
                            }
                        }
                    });
                }).scroll();

                // Contador animado para estadísticas
                $('.counter').each(function() {
                    var $this = $(this),
                        countTo = $this.attr('data-count');

                    $({ countNum: 0 }).animate({
                        countNum: countTo
                    }, {
                        duration: 2000,
                        easing: 'swing',
                        step: function() {
                            $this.text(Math.floor(this.countNum));
                        },
                        complete: function() {
                            $this.text(this.countNum);
                        }
                    });
                });

                // Testimonios carrusel
                let currentTestimonial = 0;
                const testimonials = $('.testimonial-item');
                const testimonialDots = $('.testimonial-dot');

                function showTestimonial(index) {
                    testimonials.removeClass('active').eq(index).addClass('active');
                    testimonialDots.removeClass('bg-indigo-600').eq(index).addClass('bg-indigo-600');
                    currentTestimonial = index;
                }

                $('.testimonial-next').click(function() {
                    let next = (currentTestimonial + 1) % testimonials.length;
                    showTestimonial(next);
                });

                $('.testimonial-prev').click(function() {
                    let prev = (currentTestimonial - 1 + testimonials.length) % testimonials.length;
                    showTestimonial(prev);
                });

                $('.testimonial-dot').click(function() {
                    let index = $(this).index();
                    showTestimonial(index);
                });

                // Auto-rotación cada 5 segundos
                setInterval(function() {
                    let next = (currentTestimonial + 1) % testimonials.length;
                    showTestimonial(next);
                }, 5000);
            });
        })(jQuery);
    </script>
