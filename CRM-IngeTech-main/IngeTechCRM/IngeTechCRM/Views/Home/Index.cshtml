<!-- Productos destacados -->
@if (ViewBag.ProductosDestacados != null && ViewBag.ProductosDestacados.Count > 0)
{
    <div class="bg-gray-light/30 py-16">
        <div class="container mx-auto px-4">
            <div class="mb-12 text-center">
                <h2 class="mb-2 text-[35px] font-bold text-gray-dark">Productos destacados</h2>
                <p class="mx-auto max-w-2xl text-gray-light">Una selección de nuestros mejores productos con la mejor calidad y precio del mercado.</p>
            </div>
            <div class="grid grid-cols-1 gap-6 sm:grid-cols-2 lg:grid-cols-4">
                @foreach (var producto in ViewBag.ProductosDestacados)
                {
                    <div class="group overflow-hidden rounded-xl bg-white shadow-md transition-all duration-300 hover:shadow-xl">
                        @{
                            var imagen = producto.Imagenes != null && producto.Imagenes.Count > 0
                            ? producto.Imagenes.First().RUTA_IMAGEN
                            : "/images/productos/default.png";
                        }
                        <div class="relative h-64 overflow-hidden bg-gray-100">
                            <img src="@imagen" class="h-full w-full object-contain p-4 transition-transform duration-300 group-hover:scale-105" alt="@producto.NOMBRE">
                            <div class="absolute bottom-0 left-0 right-0 bg-gradient-to-t from-black to-transparent p-3 opacity-0 transition-opacity duration-300 group-hover:opacity-100">
                                <span class="inline-block rounded-full bg-brand-blue px-3 py-1 text-xs font-semibold text-white">@producto.Categoria.NOMBRE</span>
                                <span class="ml-2 inline-block rounded-full bg-brand-blue px-3 py-1 text-xs font-semibold text-white">@producto.Marca.NOMBRE</span>
                            </div>
                        </div>
