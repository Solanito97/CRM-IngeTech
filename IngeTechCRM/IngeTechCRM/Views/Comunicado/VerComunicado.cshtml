@model IngeTechCRM.Models.Comunicado
@{
    ViewData["Title"] = "Ver Comunicado";
}

<div class="container mx-auto px-4 py-8">
    <!-- Breadcrumbs -->
    <nav class="mb-6 flex flex-wrap text-sm">
        <a href="@Url.Action("Index", "Home")" class="text-gray-600 hover:text-indigo-600">Inicio</a>
        <span class="mx-2 text-gray-500">/</span>
        <a href="@Url.Action("MisComunicados", "Comunicado")" class="text-gray-600 hover:text-indigo-600">Mis Comunicados</a>
        <span class="mx-2 text-gray-500">/</span>
        <span class="font-medium text-gray-800">Ver Comunicado</span>
    </nav>

    <!-- Encabezado -->
    <div class="mb-8 flex flex-wrap items-center justify-between">
        <h1 class="text-3xl font-bold text-gray-800">@Model.TITULO</h1>
        <a href="@Url.Action("MisComunicados")" class="flex items-center rounded-lg border border-gray-300 px-4 py-2 font-medium text-gray-700 shadow transition hover:bg-gray-50">
            <i class="fas fa-arrow-left mr-2"></i> Volver
        </a>
    </div>

    <div class="grid grid-cols-1 gap-8 lg:grid-cols-4">
        <!-- Contenido principal del comunicado -->
        <div class="lg:col-span-3">
            <div class="overflow-hidden rounded-xl bg-white shadow-lg">
                <div class="border-b border-gray-200 bg-indigo-600 p-6 text-white">
                    <div class="flex items-center">
                        <div class="mr-4 flex h-16 w-16 items-center justify-center rounded-full bg-white bg-opacity-20 text-3xl">
                            <i class="fas fa-envelope-open-text"></i>
                        </div>
                        <div>
                            <h2 class="text-2xl font-bold">@Model.TITULO</h2>
                            <p class="text-indigo-100">
                                Recibido el @Model.FECHA_ENVIO_REAL?.ToString("dd/MM/yyyy HH:mm")
                            </p>
                        </div>
                    </div>
                </div>

                <div class="p-6">
                    <!-- Contenido del mensaje -->
                    <div class="mb-6 rounded-lg border border-gray-200 bg-gray-50 p-6">
                        <div class="prose max-w-none">
                            @Html.Raw(Model.MENSAJE)
                        </div>
                    </div>

                    <!-- Información adicional -->
                    <div class="grid grid-cols-1 gap-4 md:grid-cols-2">
                        <div class="rounded-lg bg-gray-50 p-4">
                            <p class="text-sm font-medium text-gray-500">Enviado por</p>
                            <p class="font-medium text-gray-800">@(Model.UsuarioCreador != null ? Model.UsuarioCreador.NOMBRE_COMPLETO : "Administrador del Sistema")</p>
                        </div>
                        <div class="rounded-lg bg-gray-50 p-4">
                            <p class="text-sm font-medium text-gray-500">Fecha de creación</p>
                            <p class="font-medium text-gray-800">@Model.FECHA_CREACION.ToString("dd/MM/yyyy HH:mm")</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Panel lateral -->
        <div class="space-y-6">
            <!-- Acciones rápidas -->
            <div class="overflow-hidden rounded-xl bg-white shadow-lg">
                <div class="border-b border-gray-200 bg-gray-50 p-4">
                    <h3 class="font-semibold text-gray-800">Acciones rápidas</h3>
                </div>
                <div class="divide-y divide-gray-100">
                    <a href="@Url.Action("MisComunicados")" class="flex items-center justify-between p-4 hover:bg-gray-50">
                        <div class="flex items-center">
                            <div class="mr-3 flex h-8 w-8 items-center justify-center rounded-full bg-blue-100 text-blue-600">
                                <i class="fas fa-envelope"></i>
                            </div>
                            <span class="font-medium">Ver todos mis comunicados</span>
                        </div>
                        <i class="fas fa-chevron-right text-gray-400"></i>
                    </a>
                    <a href="@Url.Action("Index", "Home")" class="flex items-center justify-between p-4 hover:bg-gray-50">
                        <div class="flex items-center">
                            <div class="mr-3 flex h-8 w-8 items-center justify-center rounded-full bg-indigo-100 text-indigo-600">
                                <i class="fas fa-home"></i>
                            </div>
                            <span class="font-medium">Ir al inicio</span>
                        </div>
                        <i class="fas fa-chevron-right text-gray-400"></i>
                    </a>
                </div>
            </div>

            <!-- Comunicados relacionados -->
            <div class="rounded-xl bg-white shadow-lg">
                <div class="border-b border-gray-200 bg-gray-50 p-4">
                    <h3 class="font-semibold text-gray-800">¿Necesitas ayuda?</h3>
                </div>
                <div class="p-4">
                    <p class="mb-4 text-sm text-gray-600">Si tienes alguna duda sobre este comunicado, puedes contactar con nuestro equipo de soporte.</p>
                    <a href="@Url.Action("Contacto", "Home")" class="flex w-full items-center justify-center rounded-lg bg-indigo-600 px-4 py-2 font-medium text-white shadow transition hover:bg-indigo-700">
                        <i class="fas fa-headset mr-2"></i> Contactar Soporte
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>