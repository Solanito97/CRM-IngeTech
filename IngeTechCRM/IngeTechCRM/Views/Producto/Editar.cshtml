
@model IngeTechCRM.Models.Producto
@{
    ViewData["Title"] = "Editar Producto";
}

<div class="container mx-auto px-4 py-6">
    <div class="mb-6 flex items-center justify-between">
        <h1 class="text-2xl font-bold text-gray-800 md:text-3xl">Editar Producto</h1>
        <a href="@Url.Action("Index")" class="flex items-center rounded-lg bg-gray-100 px-4 py-2 font-medium text-gray-700 transition hover:bg-gray-200">
            <i class="fas fa-arrow-left mr-2"></i> Volver
        </a>
    </div>

    <div class="overflow-hidden rounded-xl bg-white shadow-lg">
        <div class="bg-gradient-to-r from-indigo-600 to-blue-500 px-4 py-3 text-white">
            <h2 class="flex items-center font-bold">
                <i class="fas fa-edit mr-2"></i> Formulario de Edición
            </h2>
        </div>
        <div class="p-6">
            @if (!string.IsNullOrEmpty(ViewBag.Message))
            {
                <div class="mb-4 rounded-lg bg-red-100 p-4 text-red-700">
                    <div class="flex">
                        <div class="flex-shrink-0">
                            <i class="fas fa-exclamation-circle"></i>
                        </div>
                        <div class="ml-3">
                            <p class="text-sm">@ViewBag.Message</p>
                        </div>
                    </div>
                </div>
            }

            <form asp-action="Editar" method="post" enctype="multipart/form-data">
                @Html.AntiForgeryToken()
                <input type="hidden" asp-for="ID_PRODUCTO" />
                <div asp-validation-summary="ModelOnly" class="mb-4 rounded-lg bg-red-100 p-4 text-red-700"></div>

                <div class="grid grid-cols-1 gap-6 md:grid-cols-2">
                    <div class="space-y-4">
                        <div>
                            <label asp-for="CODIGO" class="mb-1 block text-sm font-medium text-gray-700">Código</label>
                            <input asp-for="CODIGO"
                                   type="text"
                                   class="block w-full rounded-lg border border-gray-300 bg-white px-3 py-2 shadow-sm focus:border-indigo-500 focus:outline-none focus:ring-indigo-500"
                                   placeholder="Código del producto">
                            <span asp-validation-for="CODIGO" class="mt-1 text-sm text-red-600"></span>
                        </div>

                        <div>
                            <label asp-for="NOMBRE" class="mb-1 block text-sm font-medium text-gray-700">Nombre</label>
                            <input asp-for="NOMBRE"
                                   type="text"
                                   class="block w-full rounded-lg border border-gray-300 bg-white px-3 py-2 shadow-sm focus:border-indigo-500 focus:outline-none focus:ring-indigo-500"
                                   placeholder="Nombre del producto">
                            <span asp-validation-for="NOMBRE" class="mt-1 text-sm text-red-600"></span>
                        </div>

                        <div>
                            <label asp-for="DESCRIPCION" class="mb-1 block text-sm font-medium text-gray-700">Descripción</label>
                            <textarea asp-for="DESCRIPCION"
                                      rows="3"
                                      class="block w-full rounded-lg border border-gray-300 bg-white px-3 py-2 shadow-sm focus:border-indigo-500 focus:outline-none focus:ring-indigo-500"
                                      placeholder="Descripción detallada del producto"></textarea>
                            <span asp-validation-for="DESCRIPCION" class="mt-1 text-sm text-red-600"></span>
                        </div>

                        <div>
                            <label asp-for="PRECIO" class="mb-1 block text-sm font-medium text-gray-700">Precio</label>
                            <div class="relative mt-1 rounded-md shadow-sm">
                                <div class="pointer-events-none absolute inset-y-0 left-0 flex items-center pl-3">
                                    <span class="text-gray-500 sm:text-sm">$</span>
                                </div>
                                <input asp-for="PRECIO"
                                       type="number"
                                       min="0"
                                       step="0.01"
                                       class="block w-full rounded-md border border-gray-300 pl-7 pr-12 focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm"
                                       placeholder="0.00">
                            </div>
                            <span asp-validation-for="PRECIO" class="mt-1 text-sm text-red-600"></span>
                        </div>
                    </div>

                    <div class="space-y-4">
                        <div>
                            <label asp-for="ID_CATEGORIA" class="mb-1 block text-sm font-medium text-gray-700">Categoría</label>
                            <select asp-for="ID_CATEGORIA" asp-items="ViewBag.Categorias" class="block w-full rounded-lg border border-gray-300 bg-white px-3 py-2 shadow-sm focus:border-indigo-500 focus:outline-none focus:ring-indigo-500">
                                <option value="">Seleccione una categoría</option>
                            </select>
                            <span asp-validation-for="ID_CATEGORIA" class="mt-1 text-sm text-red-600"></span>
                        </div>

                        <div>
                            <label asp-for="ID_MARCA" class="mb-1 block text-sm font-medium text-gray-700">Marca</label>
                            <select asp-for="ID_MARCA" asp-items="ViewBag.Marcas" class="block w-full rounded-lg border border-gray-300 bg-white px-3 py-2 shadow-sm focus:border-indigo-500 focus:outline-none focus:ring-indigo-500">
                                <option value="">Seleccione una marca</option>
                            </select>
                            <span asp-validation-for="ID_MARCA" class="mt-1 text-sm text-red-600"></span>
                        </div>

                        <div>
                            <label asp-for="ID_PROVEEDOR" class="mb-1 block text-sm font-medium text-gray-700">Proveedor</label>
                            <select asp-for="ID_PROVEEDOR" asp-items="ViewBag.Proveedores" class="block w-full rounded-lg border border-gray-300 bg-white px-3 py-2 shadow-sm focus:border-indigo-500 focus:outline-none focus:ring-indigo-500">
                                <option value="">Seleccione un proveedor</option>
                            </select>
                            <span asp-validation-for="ID_PROVEEDOR" class="mt-1 text-sm text-red-600"></span>
                        </div>

                        <div class="flex items-center">
                            <input asp-for="ACTIVO" type="checkbox" class="h-4 w-4 rounded border-gray-300 text-indigo-600 focus:ring-indigo-500">
                            <label asp-for="ACTIVO" class="ml-2 block text-sm text-gray-700">Producto Activo</label>
                        </div>
                    </div>
                </div>

                <!-- Imágenes Actuales -->
                <div class="mt-8">
                    <h3 class="mb-3 text-lg font-medium leading-6 text-gray-900">Imágenes Actuales</h3>
                    @if (Model.Imagenes != null && Model.Imagenes.Count > 0)
                    {
                        <div class="grid grid-cols-2 gap-4 md:grid-cols-4 lg:grid-cols-6">
                            @foreach (var imagen in Model.Imagenes)
                            {
                                <div class="relative group">
                                    <img src="@imagen.RUTA_IMAGEN" alt="@Model.NOMBRE" class="h-32 w-full rounded-lg object-cover shadow-sm">
                                    <div class="absolute inset-0 flex items-center justify-center bg-black bg-opacity-50 opacity-0 transition-opacity group-hover:opacity-100">
                                        <div class="flex space-x-2">
                                            <a href="#" class="rounded-full bg-white p-2 text-indigo-600 hover:bg-indigo-100"
                                               onclick="openImageModal('@imagen.RUTA_IMAGEN'); return false;">
                                                <i class="fas fa-search-plus"></i>
                                            </a>
                                            <div class="rounded-full bg-white p-2 text-red-600 hover:bg-red-100 cursor-pointer"
                                                 onclick="toggleImageDelete(@imagen.ID_IMAGEN)">
                                                <i class="fas fa-trash-alt"></i>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="hidden" id="delete-badge-@imagen.ID_IMAGEN">
                                        <div class="absolute top-0 right-0 m-2 rounded-full bg-red-500 px-2 py-1 text-xs font-bold text-white">
                                            Eliminar
                                        </div>
                                        <input type="checkbox" name="imagenesAEliminar" value="@imagen.ID_IMAGEN" class="hidden">
                                    </div>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <div class="rounded-lg bg-gray-50 p-4 text-gray-500">
                            <p class="text-center">Este producto no tiene imágenes.</p>
                        </div>
                    }
                </div>

                <!-- Añadir Nuevas Imágenes -->
                <div class="mt-6">
                    <h3 class="mb-3 text-lg font-medium leading-6 text-gray-900">Añadir Nuevas Imágenes</h3>
                    <div class="flex justify-center rounded-md border-2 border-dashed border-gray-300 px-6 pt-5 pb-6">
                        <div class="space-y-1 text-center">
                            <i class="fas fa-cloud-upload-alt mx-auto h-12 w-12 text-gray-400"></i>
                            <div class="flex text-sm text-gray-600">
                                <label for="nuevasImagenes" class="relative cursor-pointer rounded-md bg-white font-medium text-indigo-600 focus-within:outline-none focus-within:ring-2 focus-within:ring-indigo-500 focus-within:ring-offset-2 hover:text-indigo-500">
                                    <span>Subir archivos</span>
                                    <input id="nuevasImagenes" name="nuevasImagenes" type="file" class="sr-only" multiple accept="image/*">
                                </label>
                                <p class="pl-1">o arrastrar y soltar</p>
                            </div>
                            <p class="text-xs text-gray-500">
                                PNG, JPG, GIF hasta 5MB
                            </p>
                        </div>
                    </div>
                    <div id="imagePreviewContainer" class="mt-2 grid grid-cols-4 gap-2"></div>
                </div>

                <div class="mt-8">
                    <div class="rounded-lg bg-yellow-50 p-4 text-yellow-800">
                        <div class="flex">
                            <div class="flex-shrink-0">
                                <i class="fas fa-exclamation-triangle"></i>
                            </div>
                            <div class="ml-3">
                                <h3 class="text-sm font-medium">Advertencia</h3>
                                <div class="mt-2 text-sm">
                                    <p>Al editar un producto:</p>
                                    <ul class="ml-4 mt-1 list-disc">
                                        <li>Las imágenes marcadas para eliminar se borrarán permanentemente.</li>
                                        <li>Si desactiva un producto, no aparecerá en las búsquedas.</li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="mt-6 flex justify-end space-x-3">
                    <a href="@Url.Action("Index")" class="rounded-lg border border-gray-300 bg-white px-4 py-2 font-medium text-gray-700 shadow-sm hover:bg-gray-50">
                        Cancelar
                    </a>
                    <button type="submit" class="rounded-lg bg-indigo-600 px-4 py-2 font-medium text-white shadow-sm hover:bg-indigo-700">
                        Guardar Cambios
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Modal para vista previa de imágenes -->
<div id="imageModal" class="fixed inset-0 z-50 flex items-center justify-center bg-black bg-opacity-75 hidden">
    <div class="max-w-3xl mx-auto p-4">
        <div class="relative">
            <img id="modalImage" src="" alt="Vista previa" class="max-h-screen max-w-full">
            <button type="button" onclick="closeImageModal()" class="absolute top-0 right-0 -mt-4 -mr-4 rounded-full bg-indigo-600 p-2 text-white hover:bg-indigo-700">
                <i class="fas fa-times"></i>
            </button>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        // Preview de nuevas imágenes
        document.getElementById('nuevasImagenes').addEventListener('change', function (e) {
            const files = e.target.files;
            const container = document.getElementById('imagePreviewContainer');
            container.innerHTML = '';

            for (let i = 0; i < files.length; i++) {
                const file = files[i];
                if (!file.type.match('image.*')) continue;

                const reader = new FileReader();
                reader.onload = function (e) {
                    const div = document.createElement('div');
                    div.className = 'relative';

                    const img = document.createElement('img');
                    img.src = e.target.result;
                    img.className = 'h-24 w-24 rounded object-cover';
                    div.appendChild(img);

                    container.appendChild(div);
                };
                reader.readAsDataURL(file);
            }
        });

        // Marcar/desmarcar imágenes para eliminar
        function toggleImageDelete(imageId) {
            const badgeElement = document.getElementById(`delete-badge-${imageId}`);
            const checkboxElement = badgeElement.querySelector('input[type="checkbox"]');

            if (badgeElement.classList.contains('hidden')) {
                badgeElement.classList.remove('hidden');
                checkboxElement.checked = true;
            } else {
                badgeElement.classList.add('hidden');
                checkboxElement.checked = false;
            }
        }

        // Modal de imágenes
        function openImageModal(imageSrc) {
            document.getElementById('modalImage').src = imageSrc;
            document.getElementById('imageModal').classList.remove('hidden');
        }

        function closeImageModal() {
            document.getElementById('imageModal').classList.add('hidden');
        }

        // Cerrar modal con Escape
        document.addEventListener('keydown', function(e) {
            if (e.key === 'Escape') {
                closeImageModal();
            }
        });
    </script>
}
