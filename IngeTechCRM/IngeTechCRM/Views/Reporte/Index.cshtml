
@{
    ViewData["Title"] = "Panel de Reportes";
}

<div class="container mx-auto px-4 py-6">
    <h1 class="mb-6 text-2xl font-bold text-gray-800 md:text-3xl">Panel de Reportes</h1>

    <div class="grid grid-cols-1 gap-6 md:grid-cols-2 lg:grid-cols-3">
        <!-- Reporte de Inventario por Almacén -->
        <div class="overflow-hidden rounded-xl bg-white shadow-lg transition duration-300 hover:shadow-xl">
            <div class="bg-gradient-to-r from-blue-600 to-indigo-500 px-4 py-3 text-white">
                <h2 class="font-bold">Inventario por Almacén</h2>
            </div>
            <div class="p-6">
                <div class="mb-4 flex justify-center">
                    <div class="rounded-full bg-blue-100 p-3">
                        <i class="fas fa-warehouse text-3xl text-blue-500"></i>
                    </div>
                </div>
                <p class="mb-6 text-center text-gray-600">
                    Consulta la distribución de inventario por almacén, incluyendo valor total y productos con stock bajo.
                </p>
                <div class="flex justify-center">
                    <a href="@Url.Action("InventarioPorAlmacen")" class="rounded-lg bg-blue-500 px-4 py-2 font-medium text-white shadow-sm transition hover:bg-blue-600">
                        Ver Reporte
                    </a>
                </div>
            </div>
        </div>

        <!-- Reporte de Inventario por Categoría -->
        <div class="overflow-hidden rounded-xl bg-white shadow-lg transition duration-300 hover:shadow-xl">
            <div class="bg-gradient-to-r from-indigo-600 to-purple-500 px-4 py-3 text-white">
                <h2 class="font-bold">Inventario por Categoría</h2>
            </div>
            <div class="p-6">
                <div class="mb-4 flex justify-center">
                    <div class="rounded-full bg-indigo-100 p-3">
                        <i class="fas fa-tags text-3xl text-indigo-500"></i>
                    </div>
                </div>
                <p class="mb-6 text-center text-gray-600">
                    Analiza la distribución de productos por categoría, con detalles de unidades y valor total del inventario.
                </p>
                <div class="flex justify-center">
                    <a href="@Url.Action("InventarioPorCategoria")" class="rounded-lg bg-indigo-500 px-4 py-2 font-medium text-white shadow-sm transition hover:bg-indigo-600">
                        Ver Reporte
                    </a>
                </div>
            </div>
        </div>

        <!-- Reporte de Ventas por Periodo -->
        <div class="overflow-hidden rounded-xl bg-white shadow-lg transition duration-300 hover:shadow-xl">
            <div class="bg-gradient-to-r from-green-600 to-teal-500 px-4 py-3 text-white">
                <h2 class="font-bold">Ventas por Periodo</h2>
            </div>
            <div class="p-6">
                <div class="mb-4 flex justify-center">
                    <div class="rounded-full bg-green-100 p-3">
                        <i class="fas fa-chart-line text-3xl text-green-500"></i>
                    </div>
                </div>
                <p class="mb-6 text-center text-gray-600">
                    Visualiza las ventas en un periodo específico, con análisis por días, provincias y productos más vendidos.
                </p>
                <div class="flex justify-center">
                    <a href="@Url.Action("VentasPorPeriodo")" class="rounded-lg bg-green-500 px-4 py-2 font-medium text-white shadow-sm transition hover:bg-green-600">
                        Ver Reporte
                    </a>
                </div>
            </div>
        </div>

        <!-- Reporte de Clientes por Provincia -->
        <div class="overflow-hidden rounded-xl bg-white shadow-lg transition duration-300 hover:shadow-xl">
            <div class="bg-gradient-to-r from-yellow-500 to-orange-500 px-4 py-3 text-white">
                <h2 class="font-bold">Clientes por Provincia</h2>
            </div>
            <div class="p-6">
                <div class="mb-4 flex justify-center">
                    <div class="rounded-full bg-yellow-100 p-3">
                        <i class="fas fa-user-friends text-3xl text-yellow-500"></i>
                    </div>
                </div>
                <p class="mb-6 text-center text-gray-600">
                    Analiza la distribución de clientes por provincia, incluyendo estadísticas de clientes activos e inactivos.
                </p>
                <div class="flex justify-center">
                    <a href="@Url.Action("ClientesPorProvincia")" class="rounded-lg bg-yellow-500 px-4 py-2 font-medium text-white shadow-sm transition hover:bg-yellow-600">
                        Ver Reporte
                    </a>
                </div>
            </div>
        </div>

        <!-- Reporte de Efectividad de Comunicados -->
        <div class="overflow-hidden rounded-xl bg-white shadow-lg transition duration-300 hover:shadow-xl">
            <div class="bg-gradient-to-r from-red-500 to-pink-500 px-4 py-3 text-white">
                <h2 class="font-bold">Efectividad de Comunicados</h2>
            </div>
            <div class="p-6">
                <div class="mb-4 flex justify-center">
                    <div class="rounded-full bg-red-100 p-3">
                        <i class="fas fa-envelope-open-text text-3xl text-red-500"></i>
                    </div>
                </div>
                <p class="mb-6 text-center text-gray-600">
                    Evalúa la efectividad de los comunicados enviados, con estadísticas de envíos y alcance.
                </p>
                <div class="flex justify-center">
                    <a href="@Url.Action("EfectividadComunicados")" class="rounded-lg bg-red-500 px-4 py-2 font-medium text-white shadow-sm transition hover:bg-red-600">
                        Ver Reporte
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
